<h1>Список пользователей:</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Mail</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.mail %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Посмотреть страничку', "/users/#{user[:id]}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @current_user then %>
  <%= link_to 'Моя страница', "/users/#{@current_user.id}" %>
<% else %>
  <%= link_to 'Регистрация', "/entry" %>
<% end %>
